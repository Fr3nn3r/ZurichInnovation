{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Submission",
    "type": "object",
    "additionalProperties": false,
  
    "required": [
      "SubmissionStatus",
      "EmailToBrokerURL",
      "DatasetID",
      "RiskAssessment",
      "RiskAssessmentReportURL",
      "QuoteURL",
      "NextSteps"
    ],
  
    "properties": {
      "SubmissionStatus": {
        "type": ["string", "null"],
        "enum": [
          "Open",
          "Pending Information",
          "Declined",
          "Assessed",
          "Quoted"
        ],
        "description": "Current status of the submission."
      },
  
      "EmailToBrokerURL": {
        "type": ["string", "null"],
        "format": "uri",
        "description": "Link generated by the document tool to email the broker."
      },
  
      "DatasetID": {
        "type": ["string", "null"],
        "description": "Exact match from input dataset_id"
      },
  
      "RiskAssessment": {
        "type": ["string", "null"],
        "enum": [
          "High",
          "Medium",
          "Low"
        ],
        "description": "Overall risk assessment level."
      },
  
      "RiskAssessmentReportURL": {
        "type": ["string", "null"],
        "format": "uri",
        "description": "Link to the detailed risk assessment report."
      },
  
      "QuoteURL": {
        "type": ["string", "null"],
        "format": "uri",
        "description": "Link to the quote document."
      },
  
      "NextSteps": {
        "type": ["string", "null"],
        "description": "Recommended next actions."
      }
    }
  }
  